<!DOCTYPE html>
<html lang="en">
    <%- include('head') %>
<body>
    <h1><%= title %></h1>
    <p> <%= texto %></p>

    <!-- <ul>
        <% pelicula.forEach((item) => { %>
          <li><%= item.titulo %></li>
          <li><%= item.poster %></li>
        <% }) %>
    </ul> -->

    <table>
        <thead>
          <tr>
            <th>Titulo</th>
            <th>Poster</th>
            <th>Reparto</th>
          </tr>
        </thead>
        <tbody style="width: 100%;border: 1px solid gray;">
          <% pelicula.forEach((item) => { %>
            <tr style="border: 1px solid gray;">
              <td style="border: 1px solid gray;"><%= item.titulo %></td>
              <td style="border: 1px solid gray;"><%= item.poster%></td>
              <td style="border: 1px solid gray;"><%= item.reparto%></td>
              <td style="border: 1px solid gray;"><img style="height: 200px;width: 100px;" src="/posters/<%= item.poster %>" alt="<%= item.titulo %>"></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      
          

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>